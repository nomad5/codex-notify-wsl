# Codex Notify Configuration
# Copy this file to ~/.codex/notify.env and customize

# CORE SETTINGS
# -------------
# Enable notifications (true/false)
NOTIFY_ENABLED=true

# Notification method: auto, burnttoast, snoretoast, msg, bell
NOTIFY_METHOD=auto

# Play sounds with notifications
NOTIFY_SOUNDS=true

# Make all notifications persistent (stay until dismissed)
NOTIFY_PERSISTENT=false

# Debug mode - verbose logging
NOTIFY_DEBUG=false

# EVENT TRIGGERS
# --------------
# Which events should trigger notifications
NOTIFY_ON_APPROVAL=true
NOTIFY_ON_SUCCESS=true
NOTIFY_ON_ERROR=true
NOTIFY_ON_LONG_RUN=true
NOTIFY_ON_START=false

# Long-running task threshold (seconds)
LONG_TASK_THRESHOLD=60

# CUSTOMIZATION
# -------------
# Custom patterns to watch for (pipe-separated)
# Example: "build complete|deployment successful|tests passed"
CUSTOM_PATTERNS=""

# Use emojis in titles (adds visual distinction)
USE_EMOJIS=true

# Notification cooldown - minimum seconds between notifications
NOTIFICATION_COOLDOWN=2

# WINDOWS SETTINGS
# ----------------
# App ID for Windows notification grouping
WINDOWS_APP_ID=Codex

# LOGGING
# -------
# Log file path
LOG_FILE=~/.codex/notifications.log

# Max log size in bytes (10MB default)
MAX_LOG_SIZE=10485760

# Rotate logs when size exceeded
ROTATE_LOGS=true